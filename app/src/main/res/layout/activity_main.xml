<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">


    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/movie1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="CINEPLEX"
        android:textSize="40dp"
        android:textColor="@color/colorAccent"
        app:fontFamily="@font/biorhyme_extrabold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit"
        android:background="@color/twin"
        android:textColor="@color/emma"
        android:layout_above="@+id/watch"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:hint="State"
        android:layout_centerHorizontal="true"/>



    <Button
        android:id="@+id/watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Out"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/emma"
        android:textColor="@color/twin"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"/>

</RelativeLayout>